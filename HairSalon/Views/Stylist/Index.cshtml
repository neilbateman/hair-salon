<!DOCTYPE html>
<html>
<head>
  <title>Hair Salon Database</title>
  <link rel="stylesheet" href="~/css/bootstrap.css" type="text/css">
    <link rel="stylesheet" href="~/css/styles.css" type="text/css">
</head>
<body>
<div class="container">
    <div class="jumbotron">
    <h1>Stylists</h1>
    @if (@Model.Count == 0)
    {
      <p>No stylists in database.</p>
    }
    @if(Model.Count != 0)
    {
      @foreach (var stylist in Model)
      {
        <h5>@stylist.Name</h5>
        <p>@stylist.Details</p>
        <p><a href="/stylists/@stylist.Id"class="btn btn-primary btn-block">See client list</a></p>
      }
    }

    <p><a href="/stylists/new" class="btn btn-primary btn-block">Add a new stylist</a></p>
    <p><a href="/" class="btn btn-primary btn-block">Home</a></p>
  </div>
</div>
</div>
</body>
</html>
