@using HairSalon.Models;
<!DOCTYPE html>
<html>
<head>
  <title>Hair Salon Database</title>
  <link rel="stylesheet" href="~/css/bootstrap.css" type="text/css">
    <link rel="stylesheet" href="~/css/styles.css" type="text/css">
</head>
<body>
  <div class="container">
    <div class="jumbotron">

    <h1>Hair Salon Database</h1>

    <ul>
      @if (Model.Count == 0)
      {
        <p>No clients have been added yet. Click the button below to add a client.</p>
      }
      @if(Model.Count != 0)
      {
        @foreach (Client client in Model)
        {
          <li><a href="/clients/@client.Id">@client.Name @client.</a></li>
        }
      }
    </ul>

    <hr>
    <p><a href="/clients/new" class="btn btn-primary btn-block">Add a new client</a></p>
    <p><a href="/" class="btn btn-primary btn-block">Home</a></p>
  </div>
</div>
</body>
</html>
